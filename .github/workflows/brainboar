name: Clone Repository

on:
  push:
    branches:
      - DesarrolloApiBack

jobs:
  clone:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout the current repository
        uses: actions/checkout@v3

      - name: Clone the external repository
        run: |
          git clone https://github.com/UPT-FAING-EPIS/proyecto-si8811a-2024-ii-u1-desarrollo-api-back.git
          
      - name: Commit and Push to your repository
        run: |
          cd proyecto-si8811a-2024-ii-u1-desarrollo-api-back
          git remote add origin https://github.com/UPT-FAING-EPIS/proyecto-si8811a-2024-ii-u1-automatizado-huallpa_apaza.git
          git push -u origin DesarrolloApiBack  # Cambia "main" si usas otra rama
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}  # Usar el token de GitHub Actions para autenticaci√≥n
